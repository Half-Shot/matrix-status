{
    parserOptions: {
        ecmaVersion: 6,
        sourceType: "module",
        ecmaFeatures: {
          jsx: true
        }
    },
    env: {
      es6: true,
      browser: true,
      node: true
    },
    extends: "eslint:recommended",

    rules: {
      prefer-const: 2,
      curly: "error",
      max-len: ["error", {
        code: 120,
        ignoreComments: true,
      }],
      comma-spacing: [ "error", {
       before: false,
       after: true
      }],
      space-before-blocks: "error",
      space-before-function-paren: "error",
      comma-style: ["error", "last"],
      indent: ["error", 2],
      key-spacing: ["error", {
        "beforeColon": false,
        "afterColon": true
      }],
      no-console: ["error", { allow: ["warn", "error","log"] }]
    }
}
